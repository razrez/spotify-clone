@model string
@{
    ViewData["Title"] = "Available plans";
}
@{
    Layout = "_AccountLayout";
}

<!DOCTYPE html>

<div class="container mt-5 ms-4">
     <div class="mt-5 me-5 mb-5">
             <h4 class="mb-3"><b>Your plan</b></h4>
             <div class="card plan-card">
                 <div class="card-header plan-card-bg">
                     <h1 class="text-white mt-5 mb-5"><b>Plan Name</b></h1>
                 </div>
                 <div class="card-body mt-2">
                     <h5 class="card-title"><b>Cost</b></h5>
                 </div>
             </div>
     </div> 
    <h4 class="mb-3"><b>Available plans</b></h4>
    <div class="plans mb-5">
        <div class="slider-prev-arrow-block ">
            <a href="#carouselControls" class="text-black" role="button" data-bs-slide="prev">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-caret-left-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M3.86 8.753l5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z"/>
                </svg>
            </a>
        </div>
        <div class="plan-slider">
            <div class="carousel slide" id="carouselControls" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="d-block card plan-card">
                            <div class="card-header plan-card-bg">
                                <h1 class="text-white mt-5 mb-5"><b>First Plan</b></h1>
                            </div>
                            <div class="card-body mt-2">
                                <div class="row">
                                    <div class="col-10">
                                        <h5 class="card-title"><b>Cost</b></h5>
                                        <div class="text-secondary">/month</div>
                                    </div>
                                    <div class="col-2">
                                        <a href="#" class="btn btn-outline-dark border-dark-btn">
                                            <b>Buy</b>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item ">
                        <div class="d-block w-100 card plan-card">
                            <div class="card-header second-plan-card-bg">
                                <h1 class="text-white mt-5 mb-5"><b>Second Plan</b></h1>
                            </div>
                            <div class="card-body mt-2">
                                <div class="row">
                                    <div class="col-10">
                                        <h5 class="card-title"><b>Cost</b></h5>
                                        <div class="text-secondary">/month</div>
                                    </div>
                                    <div class="col-2">
                                        <a href="#" class="btn btn-outline-dark border-dark-btn">
                                            <b>Buy</b>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item ">
                        <div class="d-block w-100 card plan-card">
                            <div class="card-header another-plan-card-bg">
                                <h1 class="text-white mt-5 mb-5"><b>Second Plan</b></h1>
                            </div>
                            <div class="card-body mt-2">
                                <div class="row">
                                    <div class="col-10">
                                        <h5 class="card-title"><b>Cost</b></h5>
                                        <div class="text-secondary">/month</div>
                                    </div>
                                    <div class="col-2">
                                        <a href="#" class="btn btn-outline-dark border-dark-btn">
                                            <b>Buy</b>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-1 slider-next-arrow-block ms-2">
            <a href="#carouselControls" class="text-black" role="button" data-bs-slide="next">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-caret-right-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12.14 8.753l-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
                </svg>
            </a>
        </div>
    </div>
    
</div>
